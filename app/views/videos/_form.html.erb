
<% if @video.errors.any? %>
    <% @video.errors.full_messages.each do |msg| %>
        <ul>
            <li><%= msg %></li>
        </ul>
    <% end %>
<% end %>

<%= form_for @video do |f| %>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
    
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
    
    <%= f.submit %>
<% end %>